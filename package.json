{
	"name": "checkpoint",
	"displayName": "Checkpoint",
	"description": "Ez file saving",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:checkPointExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
            "properties": {
                "checkpoint.interval": {
                    "type": "number",
                    "scope": "application",
                    "default": 4,
                    "description": "Interval to save full file content."
				}
			}
		},
		"viewsContainers": {	
			"activitybar": [
				{
					"id": "checkPointExplorerContainer",
					"title": "CheckPoint",
					"icon": "resources/activityBar.svg"
				}
			]
		},
		"views": {
			"checkPointExplorerContainer": [
				{
					"id": "checkPointExplorer",
					"name": "CheckPoint Explorer",
					"when": ""
				}
			]},
		"viewsWelcome": [
			{
			  "view": "checkPointExplorer",
			  "contents": "No Check Points found [learn more](https://www.npmjs.com/).\n[Commence tracking](command:checkPointExplorer.commenceTracking)"
			}
		],
		"commands": [
			{
				"command": "checkPointExplorer.commenceTracking",
				"title": "Commence tracking of current file",
				"icon": {
					"light": "resources/checkPointIcon.svg",
					"dark": "resources/checkPointIcon.svg"
				}
			},
			{
				"command": "checkPointExplorer.openFile",
				"title": "Reconstruct file at checkpoint"
			},
			{
				"command": "checkPointExplorer.deleteCheckPoint",
				"title": "Delete a particular Check Point",
				"icon": {
					"light": "resources/checkPointIcon.svg",
					"dark": "resources/checkPointIcon.svg"
				}
			},
			{
				"command": "checkPointExplorer.deleteAllCheckPoints",
				"title": "Delete all Check Points of current file",
				"icon": {
					"light": "resources/checkPointIcon.svg",
					"dark": "resources/checkPointIcon.svg"
				}
			},
			{
				"command": "checkPointExplorer.exportCheckPoints",
				"title": "Export the Check Points of current file",
				"icon": {
					"light": "resources/checkPointIcon.svg",
					"dark": "resources/checkPointIcon.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "checkPointExplorer.deleteAllCheckPoints",
					"when": "view == checkPointExplorer",
					"group": "navigation"
				},
				{
					"command": "checkPointExplorer.exportCheckPoints",
					"when": "view == checkPointExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "checkPointExplorer.deleteCheckPoint",
					"when": "view == checkPointExplorer && viewItem == checkPointItem",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/diff-match-patch": "^1.0.32",
		"diff-match-patch": "^1.0.4"
	}
}
